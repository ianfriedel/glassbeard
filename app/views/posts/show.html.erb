<div class="main">
  <div class="page_wrapper">
    <div class="container">
      <p id="notice"><%= notice %></p>

      <h1 class="blog_post_headline"><%= @post.title %></h1>
      <h6><%= @post.excerpt %></h6>
      <%= image_tag @post.image.url(:large) %>
      <h6><%= @post.body %></h6>

      <% if user_signed_in? %>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', root_path %>
      <%end %>

    </div>
  </div>
</div>
