          </div>
        </div>

        <div class="blog_posts">
          <h1>Blog Posts</h1>
          <div class="row">
            <% @home.each do |post| %>
              <div class="col-md-4"><%= image_tag post.image.url(:large), class: "img-responsive"%>
                <h6 class="small-title"><%= link_to post.title, post %></h6>
              </div>
            <% end %>
          </div>
        </div>

    </div>
